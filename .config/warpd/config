# Modified activation keys to use alt+command+control+shift instead of alt+command
hint_activation_key: C-M-S-A-x
hint2_activation_key: C-M-S-A-X
grid_activation_key: C-M-S-A-g
history_activation_key: C-M-S-A-h
screen_activation_key: C-M-S-A-s
activation_key: C-M-S-A-c
hint_oneshot_key: C-M-S-A-l
hint2_oneshot_key: C-M-S-A-L

# HJKL movement mapped to modifiers based on home row setup:
# h - normal (no modifier needed)
# j - Shift 
# k - Command
# l - Alt
left: h       # Normal - no modifier
down: S       # j is Shift
up: M        # k is Command
right: A      # l is Alt

# ESDF grid movement mapped to modifiers:
# e - normal (no modifier needed)
# s - Alt
# d - Command
# f - Shift
grid_up: e     # Normal - no modifier
grid_left: A   # s is Alt
grid_down: M   # d is Command
grid_right: S  # f is Shift

# Catppuccin Latte color theme settings
cursor_color: #dc8a78      # Rosewater
cursor_size: 7
grid_size: 4
grid_color: #7287fd       # Lavender
grid_border_color: #4c4f69 # Text
hint_bgcolor: #eff1f5     # Base
hint_fgcolor: #4c4f69     # Text
indicator_color: #40a02b  # Green
